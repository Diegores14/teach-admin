<%- layout('layouts/main.ejs') %>

	<section class="recuperar">
		<form class="container"  method="POST">
			<div class="row" style="text-align:center;">
				<div class="col-md-12">
					<h2>Recuperar Contraseña</h2>
					<p class="descRec">Nombre de usuario: XXXXX Correo: XXXXXX@XXXX.XXX</p>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					<div class="form-group m">
						<label>Nueva contraseña</label>
          	<input type="password" name="password"class="form-control rgt" placeholder="Type here..." autofocus=true required>
        	</div>
				</div>
				<div class="col-md-12">
					<div class="form-group m">
						<label>Confirmar nueva contraseña</label>
          	<input type="password" name="comfirm" class="form-control rgt" placeholder="Type here..." required>
        	</div>	
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					<button type="submit" class="btn btn-default m">Sing in</button>
				</div>
			</div>
		</form>
	</section>