	<section>
		<form class="container" action="/signup" method="POST">
			<div class="row" style="text-align:center;">
				<div class="col-md-12">
					<h2>Registro</h2>
					<p class="descReg">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor.</p>
				</div>
			</div>
			<div class="row">
				<div class="col-md-6 col-sm-12">
					<div class="form-group r">
						<label>Nombres</label>
          	<input type="text" class="form-control rgt" name="firstName" placeholder="Type here..." required>
        	</div>
				</div>
				<div class="col-md-6 col-sm-12">
					<div class="form-group l">
						<label>Apellidos</label>
          	<input type="text" class="form-control rgt" name="lastName" placeholder="Type here..." required>
        	</div>	
				</div>
			</div>
			<div class="row">
				<div class="col-md-6 col-sm-12">
					<div class="form-group r">
          	<label>Nombre de usuario</label>
          	<input type="text" class="form-control rgt" name="username" placeholder="Type here..." required>
        	</div>
				</div>
				<div class="col-md-6 col-sm-12">
					<div class="form-group l">
          	<label>Correo</label>
          	<input type="email" class="form-control rgt" name="email" placeholder="Type here..." required>
        	</div>	
				</div>
			</div>
			<div class="row">
				<div class="col-md-6 col-sm-12">
					<div class="form-group r">
          	<label>Cedula</label>
          	<input type="number" class="form-control rgt" name="document" placeholder="Type here..." required>
        	</div>
				</div>
				<div class="col-md-6 col-sm-12">
					<div class="form-group l">
          	<label>contraseña</label>
          	<input type="password" class="form-control rgt" name="password" minlength="8" placeholder="Type here..." required>
        	</div>	
				</div>
			</div>
			<div class="row">
				<div class="col-md-6 col-sm-12">
					<button type="submit" class="btn btn-default r">Regristrar</button>
				</div>
				<div class="col-md-6 col-sm-12">
					<button type="submit" class="btn btn-default l" formaction="/" formmethod="GET">Cancelar</button>
				</div>
			</div>

			<!--  Necesitamos mirar bien esta parte para que no se vaya a darñar el responsive-->
			<% if(signupMessage) { %>
				<div class="row">
					<div class="col-md-6 col-sm-12">
						<div class="form-group r">
							<label><%= signupMessage %></label>
						</div>
					</div>
				</div>
			<% } %>
    </form>
