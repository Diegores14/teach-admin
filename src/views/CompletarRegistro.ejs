<%- layout('layouts/session.ejs') %>

  <script src = "/scripts/request.js"></script>

<section class="curso">
		<div class="container">
			<div class="row" style="text-align:center;">
				<div class="col-md-12">
					<h2>Completar</h2>
					<p class="descReg">Completar registro del docente <%= user.firstName%> <%= user.lastName%> </p>
				</div>
			</div>
		</div>
	</section>

	
	<section>
		<form class="container" action="/completarUsuario" method="POST" enctype="multipart/form-data">
			<div class="row container-fluid">
				<div class="col-md-12 text-center">
					<img src="img/Users/<%= user.photo%>" class="photoPro"> 
				</div>
			</div>
			<div class="row" style="margin: 0 35%">
				<div class="col-md-12">
					<div class="upload-btn-wrapper">
					  <button class="btn">Cargar foto de perfil</button>
					  <input type="file" name="avatar" accept="image/*"/>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-md-6 col-sm-12">
					<div class="form-group r">
						<label>Fecha de Nacimiento</label>
          				<input type="date" class="form-control rgt" name="date" min="1919-01-01" max="2001-01-01" id = "nacimiento" placeholder="Escriba aquí..." required>
        			</div>
				</div>
				<div class="col-md-6 col-sm-12">
					<div class="form-group l">
          				<label>Pais</label>
          				<select id = "pais" name="pais" class="form-control" id="Country" >
							  <option value="" selected="selected">Seleccione País</option>
						</select>
        			</div>
				</div>
			</div>
			<div class="row">
				<div class="col-md-6 col-sm-12">
					<div class="form-group r">
          				<label>Departamento</label>
						  <select id = "state" name="departamento" class="form-control" id="Estate">
								<option value="" selected="selected">Seleccione Departamento</option>
			          	</select>
        			</div>	
				</div>
				<div class="col-md-6 col-sm-12">
					<div class="form-group l">
          				<label>Ciudad</label>
          				<select id = "city" name="ciudad" class="form-control" id="City">
								<option value="" selected="selected">Seleccione Ciudad</option>
			          	</select>
        			</div>
				</div>
			</div>
			<dif class="row text-center">
				<div class="col-md-12" style="padding: 0% 25%">
					<div class="form-group">
			          	<label>Empresa</label>
			          	<input id="company" type="text" class="form-control rgt" name="empresa" minlength="8" placeholder="Escriba aquí..." required>
		        	</div>	
				</div>
			</div>
			<div class="row">
				<div class="col-md-6 col-sm-12 col-xs-6">
					<button type="submit" class="btn btn-default r">Completar</button>
				</div>
				<div class="col-md-6 col-sm-12 col-xs-6">
					<button type="submit" class="btn btn-default l" formaction="/" formmethod="GET">Cancelar</button>
				</div>
			</div>

			<!--  Necesitamos mirar bien esta parte para que no se vaya a darñar el responsive-->
			<% if(signupMessage.length > 0) { %>
				<div class="row">
					<div class="col-md-6 col-sm-12">
						<div class="form-group r">
							<label><%= signupMessage %></label>
						</div>
					</div>
				</div>
			<% } %>
		</form>
	</section>
	<script src = "/scripts/Register/complete.js"></script>
	<script src = "/scripts/Names.js"></script>
	<script>
		generateValidationName('company')
	</script>