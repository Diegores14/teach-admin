<%- layout('layouts/session.ejs') %>

	<section class="curso">
		<div class="container">
			<div class="row" style="text-align:center;">
				<div class="col-md-12">
					<h2>Editar Curso</h2>
					<p class="descReg"> <%= course.name %>  </p>
				</div>
			</div>
		</div>
	</section>

	<section class="curso">
		<form class="container" action="/editCourses?id=<%=course._id%>" method="POST">
			<div class="row text-center">
				<div class="col-md-6 col-sm-12">
					<div class="form-group r">
						<label>Codigo de la materia</label>
          	<input type="text" name="cod" class="form-control rgt" value = "<%= course.cod%>">
        	</div>
				</div>
				<div class="col-md-6 col-sm-12">
					<div class="form-group l">
						<label>Nombre de la materia</label>
          	<input id="name" type="text" name="name" class="form-control rgt" value = "<%= course.name%>" >
        	</div>	
				</div>
			</div>
			<div class="row text-center">
				<div class="col-md-6 col-sm-12">
					<div class="form-group r">
          	<label>Tipo de Curso</label>
          	<select id = "typeCourse" name="typeCourse" class="form-control" id="" >
          		<option>Escoja una opción</option>
          		<option value="Teorico">Teorico</option>
          		<option value="Practico">Practico</option>
          		<option value="TeoPrac">Teorico-Practico</option>
          	</select>
        	</div>
				</div>
				<div class="col-md-6 col-sm-12">
					<div class="form-group l">
          	<label>Tipo de notas</label>
          	<select id = "typeNotes" name="typeNotes" class="form-control" id="" >
          		<option>Escoja una opción</option>
          		<option value="Cualitativa">Cualitativa</option>
          		<option value="Cuantitativa">Cuantitativa</option>
          	</select>
        	</div>	
				</div>
			</div>
			<div class="row text-center">
				<div class="col-md-6 col-sm-12">
					<div class="form-group r">
			          	<label>Fecha de inicio</label>
			          	<input type="date" class="form-control rgt" name="dateStart" value = "<%= start %>" required>
        	</div>
				</div>
				<div class="col-md-6 col-sm-12">
					<div class="form-group l">
		          		<label>Fecha de fin</label>
			          	<input type="date" class="form-control rgt" name="dateEnd" value = "<%= end %>" required>

        			</div>	
				</div>
			</div>
			<div class="row">
				<div class="col-md-6 col-sm-12 col-xs-6">
					<button onclick="location.href='/courses'" class="btn btn-default r">Cancelar edicion</button>
				</div>
				<div class="col-md-6 col-sm-12 col-xs-6">
					<button type="submit" class="btn btn-default l">Crear edicion</button>
				</div>
			</div>
		</form>
	</section>
	<script>
		var type1 = '<%= course.typeCourse %>'
		var type2 = '<%= course.typeNotes %>'
		var typeCourse = document.getElementById('typeCourse')
		var typeNotes = document.getElementById('typeNotes')
		typeCourse.value = type1
		typeNotes.value = type2
	</script>
	<script src = "/scripts/Names.js"></script>
	<script>
		generateValidationName('name')
	</script>