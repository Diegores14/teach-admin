<%- layout('layouts/session.ejs') %>

	<section class="curso">
		<div class="container">
			<div class="row" style="text-align:center;">
				<div class="col-md-12">
					<h2>Cursos</h2>
					<p class="descReg">Crear nuevo curso</p>
				</div>
			</div>
		</div>
	</section>

	<section class="curso">
		<form class="container" action="/createCourse" method="POST">
			<div class="row text-center">
				<div class="col-md-6 col-sm-12">
					<div class="form-group r">
						<label>Codigo de la materia</label>
          	<input type="text" name="cod" class="form-control rgt" placeholder="Type here...">
        	</div>
				</div>
				<div class="col-md-6 col-sm-12">
					<div class="form-group l">
						<label>Nombre de la materia</label>
          	<input type="text" name="name" class="form-control rgt" placeholder="Type here...">
        	</div>	
				</div>
			</div>
			<div class="row text-center">
				<div class="col-md-6 col-sm-12">
					<div class="form-group r">
          	<label>Tipo de Curso</label>
          	<select name="typeCourse" class="form-control" id="">
          		<option>Choose something</option>
          		<option value="Teorico">Teorico</option>
          		<option value="Practico">Practico</option>
          		<option value="TeoPrac">Teorico-Practico</option>
          	</select>
        	</div>
				</div>
				<div class="col-md-6 col-sm-12">
					<div class="form-group l">
          	<label>Tipo de notas</label>
          	<select name="typeNotes" class="form-control" id="">
          		<option>Choose something</option>
          		<option value="Cualitativa">Cualitativa</option>
          		<option value="Cuantitativa">Cuantitativa</option>
          	</select>
        	</div>	
				</div>
			</div>
			<dif class="row text-center">
				<div class="col-md-12">
					<div class="form-group">
						<label for="Descripción">Descripción del curso</label>
						<textarea class="form-control TextM" name="description" rows="5" id="comment" placeholder="Type here..."></textarea>
					</div>
				</div>
			</dif>
			<div class="row">
				<div class="col-md-6 col-sm-12">
					<button type="submit" class="btn btn-default r" formaction="/createCourse" formmethod="GET">Cancelar creacion</button>
				</div>
				<div class="col-md-6 col-sm-12">
					<button type="submit" class="btn btn-default l">Crear curso</button>
				</div>
			</div>
		</form>
	</section>