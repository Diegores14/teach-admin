<%- layout('layouts/session.ejs') %>
	
	<section class="curso">
		<div class="container">
			<div class="row" style="text-align:center;">
				<div class="col-md-12">
					<h2>Cursos</h2>
					<p class="descReg">Crear nuevo curso</p>
				</div>
			</div>
		</div>
	</section>

	<section class="curso">
		<% for(var i = 0; i <= Courses.length/3 ; i++){ %>
			<div class="row">
				<% for(var j = 0; j<3 && j + i*3 < Courses.length; j++){ %>
					<div class="col-sm-4">  
						<div class="tarcurso">
							<div class="row container-fluid">
								<div class="col-sm-12">
									<a href="#"><img src="img/dots.png" alt="" class="dot"></a>
								</div>
							</div>
							<div class="row container-fluid">
								<div class="col-sm-12">
									<p class="cod"> <%= Courses[i*3 + j].cod %> </p>
								</div>
							</div>
							<div class="row container-fluid">
								<div class="col-sm-12">
									<p class="name"> <%= Courses[i*3 + j].name %> </p>
								</div>
							</div>
						</div>
					</div>
				<% } %>
			</div>
		<% } %>
	</section>